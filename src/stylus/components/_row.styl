@import '../bootstrap.styl'

.v-row
  box-sizing: border-box
  display: flex
  flex: 0 1 100%
  flex-direction: row
  flex-wrap: wrap
  list-style: none
  margin: -1rem -.5rem 1rem -.5rem
  padding: 0

  &:last-child
    margin-bottom: 0

  +variant('no-gutters')
    margin: 0

make-rows($breakpoints)
